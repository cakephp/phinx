<?xml version="1.0"?>
<ruleset name="Phinx">
    <config name="installed_paths" value="../../cakephp/cakephp-codesniffer" />

    <file>app</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/tests/*/_files*</exclude-pattern>

    <rule ref="CakePHP" />

    <rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.DeclareStrictTypesMissing">
        <severity>0</severity>
    </rule>
</ruleset>
