<?xml version="1.0"?>
<ruleset name="Phinx">
    <config name="installed_paths" value="../../cakephp/cakephp-codesniffer"/>

    <rule ref="CakePHP"/>

    <rule ref="SlevomatCodingStandard.Namespaces.UnusedUses">
        <properties>
            <property name="searchAnnotations" value="true"/>
        </properties>
    </rule>

    <arg value="nps"/>

    <file>src/</file>
    <file>tests/</file>

    <exclude-pattern>*_files*</exclude-pattern>
</ruleset>
